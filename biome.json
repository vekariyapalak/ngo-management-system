{
  "$schema": "https://biomejs.dev/schemas/1.6.0/schema.json",

  "organizeImports": {
    "enabled": true
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,

      "correctness": {
        "noUnusedVariables": "warn"
      },

      "suspicious": {
        "noExplicitAny": "warn"
      },

      "style": {
        "useConst": "error",
        "useTemplate": "warn"
      },

      "complexity": {
        "noForEach": "off"
      }
    }
  },

  "javascript": {
    "formatter": {
      "quoteProperties": "asNeeded"
    }
  },

  "files": {
    "ignore": ["node_modules", "dist", "build", ".next", "coverage"]
  }
}
