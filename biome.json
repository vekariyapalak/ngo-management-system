{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",

  "formatter": {
    "enabled": true,
    "formatWithErrors": true
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },

  "files": {
    "includes": ["src/**/*.{js,jsx}"],
    "experimentalScannerIgnores": ["src/**/*.css"]
  }
}
